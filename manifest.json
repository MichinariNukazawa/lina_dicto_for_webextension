{
	"manifest_version": 2,
	"name": "lina_dicto for webextension",
	"version": "1.0",

	"description": "word translate esperanto to japanese",
	"homepage_url": "https://github.com/MichinariNukazawa/lina_dicto",
	"author": "michinari.nukazawa@gmail.com",

	"icons": {
		"48": "icon/icon_48.png",
		"96": "icon/icon_96.png"
	},

  "permissions": [
    "activeTab"
  ],

	"browser_action": {
		"default_title": "lina_dicto for webextension",
		"default_icon": "icon/icon_128.png",
		"default_popup": "popup/popup_menu.html"
	},

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": [
				"lina_dicto/js/dictionary_loader.js",
				"lina_dicto/js/dictionary.js",
				"lina_dicto/js/esperanto.js",
				"js/detector.js",
				"js/hover.js",
				"content_script.js"
			],
			"run_at": "document_end",
			"all_frames": true
		}
	]

}

